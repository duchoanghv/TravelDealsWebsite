@model MainData
<script>
    function Login() {
        $.ajax({
            type: 'POST',
            url: '/Home/Login',
            data: $('#frm-login').serialize(),
            success: function (data) {
                if (data == "1") {
                    location.reload();
                }
                else {
                    alert("Thông tin đăng nhập chưa đúng");
                }
            }
        })
    }
</script>

<div class="rn-page-title" id="rn-page-cart">
    <div class="rn-pt-overlayer"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="rn-page-title-inner">
                    <h1>Liên hệ</h1>
                    <p>Nơi quản trị viên có thể thay đổi nội dung trang web theo ý muốn.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Content-->
<section class="rn-section">
    <div class="container">
        @if (!Model.IsAuthenticated)
        {
            <div class="row">
                <div class="col-lg-6">
                    <h2 class="rn-simple-title">Bạn cần đăng nhập để sử dụng trang này</h2>
                    <div class="rn-contact-form">
                        <form id="frm-login" action="/Home/Login" method="post">
                            <div class="row mb-30">
                                <div class="col-6">
                                    <div class="rn-icon-input">
                                        <i class="fa fa-user"></i>
                                        <input type="text" name="userName" placeholder="Tên đăng nhập" required>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="rn-icon-input">
                                        <i class="fa fa-lock"></i>
                                        <input type="password" name="pass" placeholder="Mật khẩu" required>
                                    </div>
                                </div>
                            </div>
                            <div class="text-right">
                                <input class="btn btn-main btn-lg btn-shadow" type="submit" value="Đăng nhập">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-lg-12">

                    <!-- Contact Form-->
                    <div class="rn-contact-form">
                        <form id="frm-login" action="/Manage/UpdateContact" method="post" enctype="multipart/form-data" accept-charset="utf-8">
                            <div class="row mb-30">
                                <div class="col-4">
                                    <div class="rn-input-group">
                                        <label>Số điện thoại</label>
                                        <div class="rn-icon-input">
                                            <i class="fa fa-mobile"></i>
                                            <input type="text" name="Phone" placeholder="Số điện thoại" value="@Model.Contact.Phone" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="rn-input-group">
                                        <label>Email</label>
                                        <div class="rn-icon-input">
                                            <i class="fa fa-envelope"></i>
                                            <input type="email" name="Email" placeholder="Email" value="@Model.Contact.Email" required>
                                        </div>
                                    </div>
                                </div><div class="col-4">
                                    <div class="rn-input-group">
                                        <label>Thông tin thanh toán</label>
                                        <div class="rn-icon-input">
                                            <i>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-credit-card" viewBox="0 0 16 16">
                                                    <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v1h14V4a1 1 0 0 0-1-1zm13 4H1v5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1z" />
                                                    <path d="M2 10a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z" />
                                                </svg>
                                            </i>
                                            <input type="text" name="BankAccount" placeholder="Thông tin thanh toán" value="@Model.Contact.BankAccount" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-30">
                                <div class="col-6">
                                    <div class="rn-input-group">
                                        <label>Địa chỉ</label>
                                        <div class="rn-icon-input">
                                            <i class="fa fa-map-marker"></i>
                                            <input type="text" name="Address" placeholder="Địa chỉ" value="@Model.Contact.Address">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="rn-input-group">
                                        <label>Link Facebook</label>
                                        <div class="rn-icon-input">
                                            <i class="fab fa-facebook-f"></i>
                                            <input type="text" name="FacebookUrl" placeholder="Link Facebook" value="@Model.Contact.FacebookUrl">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-30">
                                <div class="col-6">
                                    <div class="rn-input-group">
                                        <label>Link Tiktok</label>
                                        <div class="rn-icon-input">
                                            <i>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tiktok" viewBox="0 0 16 16">
                                                    <path d="M9 0h1.98c.144.715.54 1.617 1.235 2.512C12.895 3.389 13.797 4 15 4v2c-1.753 0-3.07-.814-4-1.829V11a5 5 0 1 1-5-5v2a3 3 0 1 0 3 3z" />
                                                </svg>
                                            </i>
                                            <input type="text" name="TiktokUrl" placeholder="Link Tiktok" value="@Model.Contact.TiktokUrl">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="rn-input-group">
                                        <label>Link Instagram</label>
                                        <div class="rn-icon-input">
                                            <i class="fab fa-instagram"></i>
                                            <input type="text" name="InstagramUrl" placeholder="Link Instagram" value="@Model.Contact.InstagramUrl">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-30">
                                <div class="col-8">
                                    <div class="rn-input-group">
                                        <label>Logo website</label>
                                        <div class="rn-icon-input">
                                            <i class="fa fa-globe"></i>
                                            <input type="text" value="@Model.Contact.WebIcon" disabled>
                                        </div>
                                        <input type="file" name="WebIconFiles" placeholder="Chọn file">
                                    </div>
                                </div>
                                
                            </div>
                            <div class="row mb-30">
                                <div class="col-6">
                                    <div class="rn-input-group">
                                        <label>Tên website</label>
                                        <div class="rn-icon-input">
                                            <i class="fa fa-user"></i>
                                            <input type="text" name="WebTitle" placeholder="Tên website" value="@Model.Contact.WebTitle">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="rn-input-group">
                                        <label>Link Messager</label>
                                        <div class="rn-icon-input">
                                            <i>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-messenger" viewBox="0 0 16 16">
                                                    <path d="M0 7.76C0 3.301 3.493 0 8 0s8 3.301 8 7.76-3.493 7.76-8 7.76c-.81 0-1.586-.107-2.316-.307a.639.639 0 0 0-.427.03l-1.588.702a.64.64 0 0 1-.898-.566l-.044-1.423a.639.639 0 0 0-.215-.456C.956 12.108 0 10.092 0 7.76m5.546-1.459-2.35 3.728c-.225.358.214.761.551.506l2.525-1.916a.48.48 0 0 1 .578-.002l1.869 1.402a1.2 1.2 0 0 0 1.735-.32l2.35-3.728c.226-.358-.214-.761-.551-.506L9.728 7.381a.48.48 0 0 1-.578.002L7.281 5.98a1.2 1.2 0 0 0-1.735.32z" />
                                                </svg>
                                            </i>
                                            <input type="text" name="MessagerUrl" placeholder="Link Messager" value="@Model.Contact.MessagerUrl">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-right">
                                <input class="btn btn-main btn-lg btn-shadow" type="submit" value="Lưu">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<!-- End Page Content-->