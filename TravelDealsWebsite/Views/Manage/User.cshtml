@model MainData
<script>
    function Login() {
        $.ajax({
            type: 'POST',
            url: '/Home/Login',
            data: $('#frm-login').serialize(),
            success: function (data) {
                if (data == "1") {
                    location.reload();
                }
                else {
                    alert("Thông tin đăng nhập chưa đúng");
                }
            }
        })
    }
</script>

<div class="rn-page-title" id="rn-page-cart">
    <div class="rn-pt-overlayer"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="rn-page-title-inner">
                    <h1>Tài khoản</h1>
                    <p>Nơi quản trị viên có thể thay đổi nội dung trang web theo ý muốn.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Content-->
<section class="rn-section">
    <div class="container">
        @if (!Model.IsAuthenticated)
        {
            <div class="row">
                <div class="col-lg-6">
                    <h2 class="rn-simple-title">Bạn cần đăng nhập để sử dụng trang này</h2>
                    <div class="rn-contact-form">
                        <form id="frm-login" action="/Home/Login" method="post">
                            <div class="row mb-30">
                                <div class="col-6">
                                    <div class="rn-icon-input">
                                        <i class="fa fa-user"></i>
                                        <input type="text" name="userName" placeholder="Tên đăng nhập" required>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="rn-icon-input">
                                        <i class="fa fa-lock"></i>
                                        <input type="password" name="pass" placeholder="Mật khẩu" required>
                                    </div>
                                </div>
                            </div>
                            <div class="text-right">
                                <input class="btn btn-main btn-lg btn-shadow" type="submit" value="Đăng nhập">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-lg-8">

                    <!-- Contact Form-->
                    <div class="rn-contact-form">
                        <form id="frm-login" action="/Manage/UpdateUser" method="post">
                            <div class="row mb-30">
                                <div class="col-6">
                                    <div class="rn-input-group">
                                        <label>Tên đăng nhập</label>
                                        <div class="rn-icon-input">
                                            <i class="fa fa-user"></i>
                                            <input type="text" name="UserName" placeholder="Tên đăng nhập" value="@Model.User.UserName" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="rn-input-group">
                                        <label>Mật khẩu</label>
                                        <div class="rn-icon-input">
                                            <i class="fa fa-lock"></i>
                                            <input type="password" name="Pass" placeholder="Mật khẩu" value="@Model.User.Pass" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-30">
                                <div class="col-6">
                                    <div class="rn-input-group">
                                        <label>Số điểm đến</label>
                                        <div class="rn-icon-input">
                                            <i class="fa fa-map-marker"></i>
                                            <input type="number" name="TourNum" placeholder="Số điểm đến" value="@Model.User.TourNum" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="rn-input-group">
                                        <label>Số booking trong tháng</label>
                                        <div class="rn-icon-input">
                                            <i class="fa fa-globe"></i>
                                            <input type="number" name="BookingNum" placeholder="Số booking trong tháng" value="@Model.User.BookingNum" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-30">
                                <div class="col-6">
                                    <div class="rn-input-group">
                                        <label>Số khách hàng</label>
                                        <div class="rn-icon-input">
                                            <i class="fa fa-user"></i>
                                            <input type="number" name="CustomerNum" placeholder="Số khách hàng" value="@Model.User.CustomerNum" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="rn-input-group">
                                        <label>Tỷ lệ hài lòng</label>
                                        <div class="rn-icon-input">
                                            <i class="fa fa-percent"></i>
                                            <input type="number" name="SharePercent" placeholder="Tỷ lệ hài lòng" value="@Model.User.SharePercent" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-right">
                                <input class="btn btn-main btn-lg btn-shadow" type="submit" value="Lưu">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<!-- End Page Content-->