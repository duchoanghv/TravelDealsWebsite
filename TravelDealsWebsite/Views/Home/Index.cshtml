<section class="rn-section rn-fun-fact" id="f_review" tabindex="0">
    <div class="rn-section-overlayer"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="rn-section-title rn-title-pos-left rn-title-bg-color-white-10 rn-title-color-white">
                    <h2 class="rn-title">Cảm nhận của khách hàng về dịch vụ của chúng tôi</h2>
                    <span class="rn-title-bg">Cảm nhận của khách hàng</span>
                </div>
                <div class="rn-testimonials rn-testimonials2">
                    <div class="rn-testimonials-carousel carousel slide" id="rn-testimonials" data-ride="carousel">
                        <div class="carousel-inner">

                            @foreach (var item in Model.Reviews)
                            {
                                if (Model.Reviews.IndexOf(item) == 0)
                                {
                                    <div class="carousel-item active">
                                        <blockquote class="rn-testimonial2-item">
                                            <p>@item.Content</p>
                                            <footer>
                                                <div class="rn-testimonial-author">
                                                    <strong>@item.Name</strong>
                                                    <p>@item.Note</p>
                                                </div>
                                            </footer>
                                        </blockquote>
                                    </div>
                                }
                                else
                                {
                                    <div class="carousel-item">
                                        <blockquote class="rn-testimonial2-item">
                                            <p>@item.Content</p>
                                            <footer>
                                                <div class="rn-testimonial-author">
                                                    <strong>@item.Name</strong>
                                                    <p>@item.Note</p>
                                                </div>
                                            </footer>
                                        </blockquote>
                                    </div>
                                }
                            }
                        </div>
                        <ol class="carousel-indicators">
                            <li class="active" data-target="#rn-testimonials" data-slide-to="0"></li>
                            <li data-target="#rn-testimonials" data-slide-to="1"></li>
                            <li data-target="#rn-testimonials" data-slide-to="2"></li>
                            <li data-target="#rn-testimonials" data-slide-to="3"></li>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-6">
                        <div class="rn-counter-item">
                            <div class="rn-counter-number-container">
                                <span class="rn-counter-number">@Model.User.TourNum</span>+
                            </div>
                            <div class="rn-counter-text">Điểm đến sẵn sàng để lựa chọn</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="rn-counter-item">
                            <div class="rn-counter-number-container">
                                <span class="rn-counter-number">@Model.User.BookingNum</span>+
                            </div>
                            <div class="rn-counter-text">Đã book trong tháng này</div>
                        </div>
                    </div>
                    <div class="col-6">

                        <div class="rn-counter-item">
                            <div class="rn-counter-number-container">
                                <span class="rn-counter-number">@Model.User.CustomerNum</span>+
                            </div>
                            <div class="rn-counter-text">Khách hàng lựa chọn chúng tôi</div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="rn-counter-item">
                            <div class="rn-counter-number-container">
                                <span class="rn-counter-number">@Model.User.SharePercent+</span>&#x00025;+
                            </div>
                            <div class="rn-counter-text">Hài lòng và giới thiệu cho bạn bè</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="rn-section" id="f_news" tabindex="0">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="rn-section-title">
                    <h2 class="rn-title">Tin tức và Sự kiện</h2>
                    <p>Nơi cập nhật các thông tin, kinh nghiệm hữu ích về du lịch.</p>
                    <span class="rn-title-bg">Tin tức và Cẩm nang du lịch</span>
                </div>
            </div>
        </div>
        <div class="row rn-post-list">
            @foreach (var item in Model.News)
            {
                <div class="col-md-4">
                    <div class="rn-post-item rn-post-size-sm">
                        <div class="rn-post-item-thumb">
                            <a href="@($"/news/{item.LinkUrl}")">
                                <img class="img-fluid" src="@(item.Img)" alt="@item.Title" />
                            </a>
                        </div>
                        <div class="rn-post-item-header">
                            <div class="rn-post-date">
                                <div class="rn-post-date-inner">
                                    <div class="rn-post-date-d">@item.PostDay</div>
                                    <div class="rn-post-date-m-y">@item.PostMonth</div>
                                </div>
                            </div>
                            <div class="rn-post-item-title-meta">
                                <div class="rn-post-item-title-meta-inner">
                                    <div class="rn-post-item-meta">
                                        <span class="rn-post-item-author">
                                            <span>@item.Category</span>
                                        </span>
                                    </div>
                                    <h3 class="rn-post-item-title">
                                        <a href="@($"/news/{item.LinkUrl}")">@item.Title</a>
                                    </h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- End Recent New/Posts-->
