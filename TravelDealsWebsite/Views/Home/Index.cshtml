@model MainData
<!-- Slider-->
<div class="rn-carousel carousel slide" id="carouselExampleControls" data-ride="carousel">
    <div class="carousel-inner">
        @foreach (var slider in Model.BannerSliders)
        {
            <div class="@($"carousel-item " + (Model.BannerSliders.IndexOf(slider) == 0 ? "beactive" : ""))">
                <div class="carousel-caption">
                    <h2 class="rn-fade-bottom mb-25">@slider.Title</h2>
                    <p class="rn-fade-bottom rn-caption-item-2 mb-35">@slider.Description</p>
                    <a class="btn btn-main btn-lg rn-fade-bottom rn-caption-item-3" href="@(ViewData["MessagerUrl"])" target="_blank" rel="noopener noreferrer" data-tooltip="Bấm vào để liên hệ tư vấn ngay">Liên hệ ngay</a>
                </div>
                <div class="rn-slider-overlayer"></div>
                <img class="d-block w-100" src="@(slider.Img)" alt="slide">
            </div>
        }
        <div class="carousel-item">
            <div class="carousel-caption">
                <h2 class="rn-fade-bottom mb-25">Hãy liên hệ ngay với chúng tôi để được tư vấn</h2>
                <p class="rn-fade-bottom rn-caption-item-2 mb-35">Hành trình đa dạng cùng đội ngũ tư vấn viên nhiệt tình chắc chắn sẽ làm bạn hài lòng.</p>
                <a class="btn btn-main btn-lg rn-fade-bottom rn-caption-item-3" href="@(ViewData["MessagerUrl"])" target="_blank" rel="noopener noreferrer" data-tooltip="Bấm vào để liên hệ tư vấn ngay">Liên hệ ngay</a>
            </div>
            <div class="rn-slider-overlayer"></div>
            <img class="d-block w-100" src="~/assets/images/customs/slide_000.jpg" alt="slide">
        </div>
    </div>
    <!-- Slider Controls -->
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="lnr lnr-chevron-left" aria-hidden="true"></span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="lnr lnr-chevron-right" aria-hidden="true"></span>
    </a>
</div>
<!-- End slider-->
<!-- Car Search Form-->
<section class="rn-search-form-big rn-section" id="f_benefit" tabindex="0">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

