@model Contact

<div class="rn-page-title" id="rn-page-contact">
    <div class="rn-pt-overlayer"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="rn-page-title-inner">
                    <h1>Thông tin liên hệ</h1>
                    <p>Hãy liên hệ với chúng tôi để nhận tư vấn ngay.</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Page Title-->
<!-- Page Content-->
<section class="rn-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">

                <!-- Contact Form-->
                <h2 class="rn-simple-title">Để lại thông tin của bạn, chúng tôi sẽ liên hệ lại ngay</h2>
                <div class="rn-contact-form">
                    <form action="/Home/AddBookContact" method="post" enctype="multipart/form-data" accept-charset="utf-8">
                        <div class="row mb-30">
                            <div class="col-6">
                                <div class="rn-icon-input">
                                    <i>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-telephone-forward" viewBox="0 0 16 16">
                                            <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511zm10.762.135a.5.5 0 0 1 .708 0l2.5 2.5a.5.5 0 0 1 0 .708l-2.5 2.5a.5.5 0 0 1-.708-.708L14.293 4H9.5a.5.5 0 0 1 0-1h4.793l-1.647-1.646a.5.5 0 0 1 0-.708z" />
                                        </svg>
                                    </i>
                                    <input type="text" name="Phone" placeholder="Số điện thoại" required>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="rn-icon-input">
                                    <i class="far fa-envelope"></i>
                                    <input type="text" name="Email" placeholder="Địa chỉ Email">
                                </div>
                            </div>
                        </div>
                        <div class="rn-icon-input rn-icon-top mb-30">
                            <i class="far fa-comment"></i>
                            <textarea name="Note" placeholder="Lời nhắn" rows="5"></textarea>
                        </div>
                        <div class="text-right">
                            <input class="btn btn-main btn-lg btn-shadow" type="submit" value="Gửi thông tin">
                        </div>
                    </form>
                </div>
                <!-- End Contact Form-->

            </div>
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-12">
                        <h2 class="rn-simple-title">Thông tin liên hệ</h2>
                    </div>

                    <div class="col-sm-6">

                        <!-- Contact Info Item-->
                        <div class="rn-contact-info">
                            <div class="rn-info-icon">
                                <i class="lnr lnr-phone"></i>
                            </div>
                            <div class="rn-info-content">
                                <h2 class="rn-contact-title">Phone</h2>
                                <address data-tooltip="Bấm vào để liên hệ tư vấn ngay">
                                    <a href="@("tel:"+@Model.Phone)" class="text-hightline">@Model.Phone</a>
                                </address>
                            </div>
                        </div>
                        <!-- End Contact Info Item-->

                    </div>
                    <div class="col-sm-6">

                        <!-- Contact Info Item-->
                        <div class="rn-contact-info">
                            <div class="rn-info-icon">
                                <i class="lnr lnr-envelope"></i>
                            </div>
                            <div class="rn-info-content">
                                <h2 class="rn-contact-title">Email</h2>
                                <address data-tooltip="Bấm vào để liên hệ tư vấn ngay">
                                    <a href="@("mailto:"+@Model.Email)" class="text-hightline" style="color: #b33aeb !important;">@Model.Email</a>
                                </address>
                            </div>
                        </div>
                        <!-- End Contact Info Item-->

                    </div>
                    <div class="col-sm-6">

                        <!-- Contact Info Item-->
                        <div class="rn-contact-info">
                            <div class="rn-info-icon">
                                <i class="lnr lnr-map-marker"></i>
                            </div>
                            <div class="rn-info-content">
                                <h2 class="rn-contact-title">Địa chỉ</h2>
                                <address>
                                    @Model.Address
                                </address>
                            </div>
                        </div>
                        <!-- End Contact Info Item-->

                    </div>

                </div>
            </div>
        </div>
        <div class="row mb-90">
            <div class="col-lg-12">
                <!-- Google Map-->
                <div class="rn-google-map" id="rn-google-map"></div>
            </div>
        </div>
    </div>
</section>
<!-- End Page Content-->