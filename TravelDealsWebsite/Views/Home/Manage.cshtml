@model MainData
<script>
    function Login() {
        $.ajax({
            type: 'POST',
            url: '/Home/Login',
            data: $('#frm-login').serialize(),
            success: function (data) {
                if (data == "1") {
                    location.reload();
                }
                else {
                    alert("Thông tin đăng nhập chưa đúng");
                }
            }
        })
    }
</script>

